{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "strictNullChecks": true,
    "paths": {
      "@shared": ["/shared/*"],
      "@entities": ["/entities/*"],
      "@features": ["/features/*"],
      "@widgets": ["/widgets/*"],
      "@pages": ["/pages/*"],
      "@app": ["/app/*"],
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
